[
    {
        "test_describes": "data validate test in correct scenario",
        "component_under_test": "data_validator",
        "data": [
            {
                "date": "2023-03-20",
                "city": "台北市",
                "region": "中山區",
                "cases": 1
            },
            {
                "date": "2023-03-20",
                "city": "台北市",
                "region": "中山區",
                "cases": 1
            },
            {
                "date": "2023-03-20",
                "city": "台北市",
                "region": "信義區",
                "cases": 5
            }
        ]
    },
    {
        "test_describes": "missing required fields (date)",
        "component_under_test": "data_validator",
        "data": [
            {
                "city": "台北市",
                "region": "中山區",
                "cases": 1
            }
        ],
        "expected_response": {
            "message": "Missing required field(s): date."
        }
    },
    {
        "test_describes": "invalid field type (date as number)",
        "component_under_test": "data_validator",
        "data": [
            {
                "date": 20230320,
                "city": "台北市",
                "region": "中山區",
                "cases": 1
            }
        ],
        "expected_response": {
            "message": "Invalid date format. Expected 'YYYY-MM-DD'."
        }
    },
    {
        "test_describes": "invalid date format",
        "component_under_test": "data_validator",
        "data": [
            {
                "date": "20-03-2023",
                "city": "台北市",
                "region": "中山區",
                "cases": 1
            }
        ],
        "expected_response": {
            "message": "Invalid date format. Expected 'YYYY-MM-DD'."
        }
    },
    {
        "test_describes": "non-Taiwan city",
        "component_under_test": "data_validator",
        "data": [
            {
                "date": "2023-03-20",
                "city": "上海市",
                "region": "黃浦區",
                "cases": 2
            }
        ],
        "expected_response": {
            "message": "Invalid city name. Expected it is a Taiwan city."
        }
    },
    {
        "test_describes": "negative case count",
        "component_under_test": "data_validator",
        "data": [
            {
                "date": "2023-03-20",
                "city": "台北市",
                "region": "中山區",
                "cases": -1
            }
        ],
        "expected_response": {
            "message": "'cases' must be a positive integer."
        }
    },
    {
        "test_describes": "extra unexpected field",
        "component_under_test": "data_validator",
        "data": [
            {
                "date": "2023-03-20",
                "city": "台北市",
                "region": "中山區",
                "cases": 1,
                "extra_field": "unexpected"
            }
        ],
        "expected_response": {
            "message": "Unexpected field(s): extra_field found in the request body."
        }
    }
]
