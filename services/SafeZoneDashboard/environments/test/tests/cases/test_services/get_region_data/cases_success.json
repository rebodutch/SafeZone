[
    {
        "test_describes": "test callback to get region data in the map",
        "url_template": "{{API_URL}}/cases/region?now={{now}}&interval={{interval}}&city={{mock_city}}&region={{mock_region}}&ratio={{ratio}}",
        "params": {
            "city": "台北市",
            "interval": "14",
            "ratio": false
        },
        "mock_regions": {
            "台北市": [
                "信義區",
                "大安區",
                "中正區"
            ]
        },
        "expected": {
            "response_template": {
                "data": {
                    "start_date": "{{start_date}}",
                    "end_date": "{{now}}",
                    "city": "{{mock_city}}",
                    "region": "{{mock_region}}",
                    "aggregated_cases": "{{aggregated_cases}}"
                },
                "message": "Data returned successfully",
                "detail": "Data returned successfully for dates {{start_date}} ~ {{now}}.",
                "success": true
            },
            "data_template": {
                "{{mock_region}}": "{{aggregated_cases}}"
            }
        }
    },
    {
