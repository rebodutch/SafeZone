[
    {
        "test_describes": "Request to ingest daily COVID data in correct scenario",
        "endpoint": "/covid_event",
        "method": "POST",
        "request": {
            "payload": {
                "date": "2023-03-20",
                "city": "台北市",
                "region": "信義區",
                "cases": 50
            }
