        "endpoint": "/simulate/daily",
        "date": "2023-03-20",
        "expected_status_code": 200,
        "expected_response": {
            "status": "success",
            "message": "Data sent successfully for date 2023-03-20"
        }
    },
    {
        "test_describes": "Request by interval data in correct scenario",
        "endpoint": "/simulate/interval",
        "start_date": "2023-03-20",
        "end_date": "2023-04-05",
        "expected_status_code": 200,
        "expected_response": {
            "status": "success",
            "message": "Data sent successfully for dates 2023-03-20 ~ 2023-04-05"
        }
    },
    {
